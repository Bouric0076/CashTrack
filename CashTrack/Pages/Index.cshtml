@page
@model IndexModel
@{
    ViewData["Title"] = "CasTrack - Your Personal Expense Tracker";
}


<!-- Hero Section -->
<header class="hero">
    <div class="container hero-content">
        <div class="hero-text">
            <h1>Take Control of Your Finances</h1>
            <p>Easily track your expenses, manage your budget, and achieve your financial goals with CashTrack.</p>
            <a href="/Identity/Account/Register" class="cta-button">Get Started Free</a>
        </div>
        <div class="hero-image">
            <img src="~/images/expense-illustration.jpg" alt="Expense Tracking Illustration">
        </div>
    </div>
</header>

<!-- Features Section -->
<section id="features" class="features">
    <div class="container">
        <h2>Features</h2>
        <p>CashTrack offers a range of features designed to simplify your financial management.</p>
        <div class="feature-grid">
            <div class="feature-item">
                <img src="~/images/Track-expenses.png" alt="Track Expenses">
                <h3>Track Expenses</h3>
                <p>Log your daily expenses effortlessly and keep a close eye on where your money goes.</p>
            </div>
            <div class="feature-item">
                <img src="~/images/Budgeting.png" alt="Budgeting">
                <h3>Budgeting</h3>
                <p>Create personalized budgets and receive alerts to stay within your financial limits.</p>
            </div>
            <div class="feature-item">
                <img src="~/images/Report.png" alt="Reports">
                <h3>Detailed Reports</h3>
                <p>Generate insightful reports and visualizations to understand your spending habits.</p>
            </div>
            <div class="feature-item">
                <img src="~/images/security.png" alt="Security">
                <h3>Secure Data</h3>
                <p>Your financial data is protected with industry-standard security measures.</p>
            </div>
        </div>
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits">
    <div class="container">
        <h2>Why Choose CashTrack?</h2>
        <div class="benefits-grid">
            <div class="benefit-item">
                <i class="fas fa-check-circle"></i>
                <h3>User-Friendly Interface</h3>
                <p>Navigate through the app with ease, whether you're tech-savvy or a beginner.</p>
            </div>
            <div class="benefit-item">
                <i class="fas fa-sync-alt"></i>
                <h3>Real-Time Sync</h3>
                <p>Access your data anytime, anywhere, with seamless synchronization across devices.</p>
            </div>
            <div class="benefit-item">
                <i class="fas fa-headset"></i>
                <h3>24/7 Support</h3>
                <p>Our support team is always ready to help you with any queries or issues.</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section id="testimonials" class="testimonials">
    <div class="container">
        <h2>What Our Users Say</h2>
        <div class="testimonial-slider">
            <div class="testimonial-item">
                <p>"CashTrack has revolutionized the way I manage my finances. It's intuitive and incredibly helpful!"</p>
                <h4>Jane Doe</h4>
            </div>
            <div class="testimonial-item">
                <p>"I love the detailed reports and how easy it is to set up budgets. Highly recommend CashTrack!"</p>
                <h4>John Smith</h4>
            </div>
            <div class="testimonial-item">
                <p>"Secure and reliable. CashTrack gives me peace of mind knowing my data is safe."</p>
                <h4>Emily Johnson</h4>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" class="pricing">
    <div class="container">
        <h2>Pricing</h2>
        <div class="pricing-grid">
            <div class="pricing-card">
                <h3>Free</h3>
                <p class="price">$0/month</p>
                <ul>
                    <li>Track up to 50 expenses</li>
                    <li>Basic Budgeting</li>
                    <li>Standard Reports</li>
                    <li>Email Support</li>
                </ul>
                <a href="/Identity/Account/Register" class="cta-button">Get Started</a>
            </div>
            <div class="pricing-card popular">
                <h3>Pro</h3>
                <p class="price">$9.99/month</p>
                <ul>
                    <li>Unlimited Expenses</li>
                    <li>Advanced Budgeting</li>
                    <li>Detailed Reports</li>
                    <li>Priority Support</li>
                </ul>
                <a href="/Identity/Account/Register" class="cta-button">Upgrade Now</a>
            </div>
            <div class="pricing-card">
                <h3>Enterprise</h3>
                <p class="price">Contact Us</p>
                <ul>
                    <li>Custom Solutions</li>
                    <li>Team Management</li>
                    <li>Dedicated Support</li>
                    <li>API Access</li>
                </ul>
                <a href="/Contact" class="cta-button">Contact Sales</a>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta">
    <div class="container">
        <h2>Ready to Take Control of Your Finances?</h2>
        <a href="/Identity/Account/Register" class="cta-button">Sign Up Now</a>
    </div>
</section>

